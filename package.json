{
	"name": "ultimate-react-pdf",
	"description": "The most complete React PDF for everyone without dependencies.",
	"version": "1.7.0",
	"type": "module",
	"license": "MIT",
	"author": {
		"name": "Ceci Cifu",
		"email": "ceciliocifuentes@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cecicifu/ultimate-react-pdf.git"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": "./dist/index.js"
	},
	"keywords": [
		"react",
		"pdf",
		"viewer"
	],
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"dev": "vite",
		"start": "vite",
		"build": "tsc && vite build",
		"prepublishOnly": "npm run build",
		"lint": "eslint . --ext ts,tsx --max-warnings 0",
		"lint:fix": "eslint --fix . --ext ts,tsx",
		"preview": "vite preview",
		"create-worker": "node ./create-pdfjs-worker.js",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"coverage": "vitest run --coverage"
	},
	"peerDependencies": {
		"@types/react": ">= 16.0.0",
		"react": ">= 16.0.0",
		"react-dom": ">= 16.0.0"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		}
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.0.13",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@typescript-eslint/parser": "^8.36.0",
		"@vitejs/plugin-react-swc": "^3.10.2",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.31.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"glob": "^11.0.3",
		"jsdom": "^26.1.0",
		"pdfjs-dist": "^4.5.136",
		"typescript": "^5.2.2",
		"typescript-eslint": "^8.36.0",
		"vite": "^7.0.4",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-lib-inject-css": "^2.2.2",
		"vite-plugin-static-copy": "^3.1.0",
		"vitest": "^3.2.4"
	}
}
